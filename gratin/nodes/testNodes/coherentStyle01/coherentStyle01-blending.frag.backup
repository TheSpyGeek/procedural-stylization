#version 410 core

layout(location = 0) out vec4 rendering;

in vec2 texcoord;

uniform sampler2D image;

void main() {
  vec4 d = texture(image,texcoord);

  if(d.w>1.)
    d = d/d.w;

  d.xyz /= 1.5;
  //d = d/2.;
  rendering = d;
  //rendering = vec4(1,0,0,1);
}
